#include <stdio.h>
#include <stdlib.h>
int main()
{
  FILE *Quiz;
  int *arr;
  int n;
  int k,m,i;
  k = n;
  m = 0;

  printf("Sayi giriniz: ");
  scanf("%d", &n);
  Quiz = fopen("quiz8.txt ", "w");
  fprintf(Quiz, "%d", n);
  fclose(Quiz);
  Quiz = fopen("quiz8.txt", "rt");

    while(k!=0)
        {
        k = k / 100;
        m++;
        }

    arr = (int*)malloc(m * sizeof(int));

    for(i=0;i<m;i++)
    {
        arr[i] = n%10;
        n = n / 10;
    }

    for(i=m-1;i>=0;i--)
{
    switch(arr[i]) {
 case 1: printf( "bir  " );
 break;
 case 2: printf( "iki  " );
 break;
 case 3: printf( "uc  " );
 break;
 case 4: printf( "dort  " );
 break;
 case 5: printf( "bes  " );
 break;
 case 6: printf( "alti  " );
 break;
 case 7: printf( "yedi  " );
 break;
 case 8: printf( "sekiz  " );
 break;
 case 9: printf( "dokuz  " );
 break;
 case 0: printf( "sifir  " );
 break;
 default:
 printf("Yanlış tuşa bastınız");
 break;
    }
}
    printf("\n");
    fclose(Quiz);
    printf("Successful \n");
    getch();
    return 0;
}
